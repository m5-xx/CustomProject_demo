<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_mylike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pic_music_c" />

    <TextView
        android:id="@+id/tv_mylikeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/iv_mylike"
        android:text="歌名:"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/tv_mylikeSinger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="歌手:"
        android:textSize="16sp"
        android:layout_alignBottom="@+id/iv_mylike"
        android:layout_alignStart="@+id/tv_mylikeTitle" />

    <Button
        android:id="@+id/bt_downloade"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="下载"
        android:background="@drawable/select_button"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        />


</RelativeLayout>